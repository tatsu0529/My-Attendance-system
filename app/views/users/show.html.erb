<% provide(:title, @user.name) %>

<h1>プロフィール</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-bordered" id="table-user">
      <tr>
        <th class="active col-md-3"><%= User.human_attribute_name :id %></th>
        <th class="col-md-9"><%= @user.id %></th>
      </tr>
      <tr>
        <th class="active"><%= User.human_attribute_name :name %></th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th class="active"><%= User.human_attribute_name :email %></th>
        <th><%= @user.email %></th>
      </tr>
      <tr>
        <th class="active"><%= User.human_attribute_name :created_at %></th>
        <th><%= l(@user.created_at, format: :long) %></th>
      </tr>
    </table>
  </div>    
</div>
